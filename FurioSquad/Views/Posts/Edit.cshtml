                    <table>
                        <tr>
                            @{
                                int counter = 0;
                                List<FurioSquad.Models.BlogViewModels.AssignedTagsData> tags = ViewBag.Tags;
                                foreach (var tag in tags)
                                {
                                    if (counter++ % 4 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedTags"
                                               value="@tag.TagId"
                                               @(Html.Raw(tag.Assigned ? "checked=\"checked\"" : " ")) />
